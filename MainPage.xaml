<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsulinIPCalc.MainPage"
             Title="InsulinIPCalc">
    <ScrollView>
        <Grid RowSpacing="10"
              ColumnSpacing="5"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{OnPlatform 600, iOS=200, Android=200}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="Target Blood Glucose"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="0"
                   Grid.Column="0" />
            <Picker x:Name="pickerTargetBS"
                    Title="Select a target"
                    SelectedIndex="0"
                    Grid.Row="0"
                    Grid.Column="1">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>120 - 160 mg/dL</x:String>
                        <x:String>140 - 180 mg/dL</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label Text="Current Blood Glucose"
                   SemanticProperties.HeadingLevel="Level2"
                   SemanticProperties.Description=""
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="1"
                   Grid.Column="0" />
            <Entry x:Name="etCurrentBS"
                   Placeholder="Enter text"
                   Keyboard="Numeric"
                   TextChanged="OnCurrentBSChanged"
                   Grid.Row="1"
                   Grid.Column="1" />
            <Label Text="mg/dL"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="1"
                   Grid.Column="2" />
            <Label Text="Previous Blood Glucose"
                   SemanticProperties.HeadingLevel="Level2"
                   SemanticProperties.Description=""
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="2"
                   Grid.Column="0" />
            <Entry x:Name="etPreviousBS"
                   Placeholder="Enter text"
                   Keyboard="Numeric"
                   TextChanged="OnPreviousBSChanged"
                   Grid.Row="2"
                   Grid.Column="1" />
            <Label Text="mg/dL"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="2"
                   Grid.Column="2" />
            <Label Text="Time between readings"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="3"
                   Grid.Column="0" />
            <Entry x:Name="etTimeBS"
                   Placeholder="Enter text"
                   Text="{Binding etTimeBS, Mode=TwoWay}"
                   Keyboard="Numeric"
                   TextChanged="OnTimeBSChanged"
                   Grid.Row="3"
                   Grid.Column="1" />
            <Label Text="hr"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="3"
                   Grid.Column="2" />
            <Label Text="Current infusion rate"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="4"
                   Grid.Column="0" />
            <Entry x:Name="etInfRate"
                   Placeholder="Enter text"
                   Keyboard="Numeric"
                   TextChanged="OnInfRateChanged"
                   Grid.Row="4"
                   Grid.Column="1" />
            <Label Text="Units/hr"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="4"
                   Grid.Column="2" />
            <Button x:Name="CalcRateBtn"
                    Text="Calculate Rate"
                    SemanticProperties.Hint="Calculate Insulin infusion rate"
                    Clicked="OnCalcRateClicked"
                    HorizontalOptions="Start"
                    Grid.Row="5"
                    Grid.Column="0" />
            <Label Text="Set Insulin infusion rate at:"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="6"
                   Grid.Column="0" />
            <Label x:Name="tSetRate"
                   Text="{Binding tSetRate, Mode=TwoWay}"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="7"
                   Grid.Column="0" />
            <Label Text="Yale Insulin Infusion Protocol Logic:"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="8"
                   Grid.Column="0" />
            <Label x:Name="tExplain"
                   Text="{Binding tExplain, Mode=TwoWay}"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="{OnPlatform 32, iOS=18, Android=18}"
                   HorizontalOptions="Start"
                   Grid.Row="9"
                   Grid.Column="0" />
        </Grid>
    </ScrollView>
</ContentPage>